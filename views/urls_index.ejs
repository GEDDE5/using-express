<%- include partials/_header %>
<table class="table table-striped">
  <tr>
    <td>&nbsp;</td>
    <td class="cleafix"><h4>Short URL</h4></td>
    <td><h4>Long URL</h4></td>
    <td>&nbsp;</td>
  </tr>
  <% Object.keys(urls).forEach((k, i) => { %>
  <tr>
    <td><%= i + 1 %></td>
    <td><a href="/u/<%= k %>">http://localhost:8080/u/<%= k %></a></td>
    <td>
      <form class="form-inline" method="GET" id="update" action="/urls/<%= k %>">
        <label for="update"><%= urls[k] %></label>
        <button id="update" class="btn btn-default btn-xs" type="submit">
          Update
        </button>
      </form>
    </td>
    <td>
      <form class="form-inline" method="POST" id="delete" action="/urls/<%= k %>/delete">
        <button class="btn btn-default btn-xs" form="delete" type="submit">x</button>
      </form>
    </td>
  </tr>
  <% }); %>
</table>
<%- include partials/_footer %>